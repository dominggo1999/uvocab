{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "no-unused-expressions": "off",
    "keyword-spacing": "off",
    "linebreak-style": 0,
    "no-console": 0,
    "arrow-body-style": 0,
    "no-shadow": 0,
    "no-param-reassign": 0,
    "max-len": ["error", { "code": 1000 }],
    "prefer-destructuring": 0,
    "consistent-return": 0,
    "no-plusplus": 0
  }
}
